<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="asis_unlp" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>model.Usuario</class>
        <class>model.Campaña</class>
        <class>model.Barrio</class>
        <class>model.Reporte</class>
        <class> model.Jornada</class>
        <class> model.Zona</class>
        <class> model.FiltroPersonalizado</class>
        <class>model.Encuesta</class>
        <class>model.Pregunta</class>
        <class>model.Encuestador</class>
        <class>model.OrganizacionSocial</class>





        <properties>
            <!-- Configuración de conexión -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/asis_unlp?useSSL=false"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="admin"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- Mostrar SQL -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>


        </properties>
    </persistence-unit>

    <persistence-unit name="asis_unlp_test" transaction-type="RESOURCE_LOCAL">
